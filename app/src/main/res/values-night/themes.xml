        <item name="colorPrimary">@color/pikkutheme_color</item>
        <item name="colorPrimaryVariant">@color/PIKKU_DARKBLUE</item>
        <item name="colorOnPrimary">@color/PIKKU_VERYDARKBLUE</item>
